%h1 Web page analyser

- form_tag page_analyser_index_path, :method => :get, :id => "search-form" do
  %fieldset
    = check_box_tag "group_by", "domain", true
    %span Group by domain
    = label_tag :q, "Search"
    %input(type="search" id="q" name="q" value="#{params[:q].present? ? h(params[:q]) : nil}")
    = submit_tag "Go"
